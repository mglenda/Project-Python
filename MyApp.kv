#:kivy 2.1.0

<AnswerButton>:
    press_col: (0, .8, 0, 1)
    hover_col: (0, 1, 0, 1)
    normal_col: (0, 0, 0, 1)
    font_size:"22sp"
    color: 1, 1, 1, 1
    text_size: self.size
    halign: "center"
    valign: "middle"

    background_color: (0, 0, 0, 0)
    b_col: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: self.b_col
        Rectangle:
            pos: self.pos
            size: self.size

<MenuLayout>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    padding: [10, 0, 10, 0]
    
    Label:
        id: result_label
        font_name: "Comic"
        text_size: self.size
        color: 1,1,1,1
        text: "VYSLEDOK"
        valign: "middle"
        halign: "left"

    Label:
        id: date_label
        font_name: "Comic"
        text_size: self.size
        color: 1,1,1,1
        text: "DATUM"
        valign: "middle"
        halign: "right"

<PopUpButton>:
    font_size:25
    color: [0, 0, 0, 1]
    text_size: self.size
    halign: "center"
    valign: "middle"

<QuestionLabel>:
    font_name: "Comic"
    text_size: self.size
    color: 0,0,0,1

<MainLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 
        Rectangle:
            pos: self.pos
            size: self.size