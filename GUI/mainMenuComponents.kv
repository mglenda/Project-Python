<MainMenuButton>:
    icon_size: "30sp"
    shift_y: 60
    size_hint_x: 1.0
    theme_icon_color: "Custom"
    icon_color: 1,1,1,1
    scale_x: 1
    scale_y: 1
    #height: self.width
    pos_hint: {"center_x": .5}
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self.scale_x or 1
            y: self.scale_y or 1
    canvas.after:
        PopMatrix

